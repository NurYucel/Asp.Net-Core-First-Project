@model Student

@{
    ViewBag.Header = " Training Institution";
    ViewData["Motor"] = "A Training Instute ";
}

    <div class="container mt-3">
        <h2>Add Student</h2>
        <form asp-controller="Student" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3 mt-3">
                <label asp-for="@Model.Id" class="form-label">Id:</label>
                <input asp-for="@Model.Id" type="number" class="form-control" readonly placeholder="Enter Id">
            <div><span asp-validation-for="@Model.Id" class="text-danger"></span></div>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for="@Model.FirstName" class="form-label">First Name:</label>
                <input asp-for="@Model.FirstName" type="text" class="form-control" placeholder="Enter First Name">
            <div><span asp-validation-for="@Model.FirstName" class="text-danger"></span></div>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for="@Model.LastName" class="form-label">Last Name:</label>
                <input asp-for="@Model.LastName" type="text" class="form-control" placeholder="Enter Last Name">
            <div><span asp-validation-for="@Model.LastName" class="text-danger"></span></div>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for="@Model.Email" class="form-label">Email:</label>
                @Html.TextBoxFor(model=>model.Email, new {@class = "form-control", placeholder = "Enter Email"})
            <div><span asp-validation-for="@Model.Email" class="text-danger"></span></div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Age" class="form-label">Age:</label>
                @Html.TextBoxFor(model=>model.Age, new {@class = "form-control"})
            <div><span asp-validation-for="@Model.Age" class="text-danger"></span></div>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>